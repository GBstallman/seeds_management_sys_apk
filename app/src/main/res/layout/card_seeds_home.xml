<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    tools:context=".Fragments.HomeFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/img_seed"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:background="#ddd"
            android:layout_marginTop="0dp"
            android:src="@mipmap/riz"/>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="5dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/txt_seed_item_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/umuceri"
                    android:singleLine="true"
                    android:textSize="30sp"
                    android:textColor="#333"/>
                <TextView
                    android:id="@+id/txt_detail_item_name"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="@string/le_riz_est_une_c_r_ale_de_la_famille_des_poac_es_anciennement_gramin_es_cultiv_e_dans_les_r_gions_tropicales_subtropicales_et_temp_r_es_chaudes_pour_son"
                    android:textSize="9pt"
                    android:textColor="#333"/>
            </LinearLayout>
            <TextView
                android:id="@+id/txt_seed_item_owner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/by_nitrains"
                android:background="#fff"
                android:elevation="5dp"
                android:layout_margin="5dp"
                android:padding="5dp"
                android:maxLines="1"
                android:singleLine="true"
                android:textColor="#333"
                android:layout_alignParentEnd="true"/>
        </RelativeLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>