<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="20pt"
        android:text="Vendre"
        android:textSize="30dp"
        android:textAlignment="center"
        android:gravity="center_horizontal" />
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp">
        <EditText
            android:id="@+id/field_emission_title"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:drawableRight="@drawable/ic_edit"
            android:focusedByDefault="true"
            android:hint="Nom du client" />
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp">

        <EditText
            android:id="@+id/field_emission_categorie"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:drawableRight="@drawable/ic_edit"
            android:focusedByDefault="true"
            android:hint="Prénom du client" />
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp">

        <EditText
            android:id="@+id/field_emission_seed"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:drawableRight="@drawable/ic_edit"
            android:focusedByDefault="true"
            android:hint="quantité" />
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp">

        <EditText
            android:id="@+id/field_seed_prix"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:inputType="number"
            android:focusedByDefault="true"
            android:hint="Prix" />
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp">

        <EditText
            android:id="@+id/field_emission_url"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:focusedByDefault="true"
            android:inputType="phone"
            android:hint="Télephone du client" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/field_seed_details"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:inputType="datetime"
            android:focusedByDefault="true"
            android:hint="Date" />
    </com.google.android.material.textfield.TextInputLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/btn_seed_cancel"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="annuler"
            android:textColor="#228B22"
            android:padding="0dp"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"/>
        <Button
            android:id="@+id/btn_emission_submit"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/material_button"
            android:text="Vendre"
            android:textColor="#fff"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>
</LinearLayout>